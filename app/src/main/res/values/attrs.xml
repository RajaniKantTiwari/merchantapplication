<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="customFont" format="string" />
        <attr name="errorMsg" format="string" />
        <attr name="emptyMsg" format="string" />
        <attr name="validation" format="string"/>
    </declare-styleable>
    <declare-styleable name="CustomButton">
        <attr name="customBackground" format="reference" />
    </declare-styleable>
    <declare-styleable name="ScannerOverlay">
        <attr name="square_width" format="integer" />
        <attr name="square_height" format="integer" />
        <attr name="line_color" format="color" />
        <attr name="line_width" format="integer" />
        <attr name="line_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="BarcodeReader">
        <attr name="auto_focus" format="boolean" />
        <attr name="use_flash" format="boolean" />
    </declare-styleable>
</resources>