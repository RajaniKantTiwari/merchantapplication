<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/match_wrap"
        android:orientation="vertical">
        <com.app.merchant.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100"
            android:background="@drawable/imge"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_21"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_header_large" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/match_wrap"
            tools:showIn="@layout/fragment_order_received">

            <LinearLayout
                style="@style/wrap_match"
                android:background="@color/date_bg_color"
                android:paddingEnd="@dimen/margin_7"
                android:paddingStart="@dimen/margin_7">

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvHeading"
                    style="@style/textview_description_large_wrap"
                    android:layout_gravity="center"
                    android:text="@string/date"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="vertical"
                android:padding="@dimen/margin_2">

                <com.app.merchant.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/welcome"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey" />

                <com.app.merchant.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Mr. John Doe"
                    android:textAllCaps="true" />

                <com.app.merchant.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/welcome"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>