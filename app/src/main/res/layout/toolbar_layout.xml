<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:background="@color/darker_blackish"
        app:contentInsetStart="@dimen/margin_0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDrawer"
                style="@style/image_45"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_10"
                android:background="@android:color/transparent"
                android:src="@drawable/hamberg" />

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvHeading"
                    style="@style/textview_title_match"
                    android:layout_toStartOf="@+id/ivSearch"
                    android:layout_toEndOf="@+id/ivDrawer"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white" />
            <RelativeLayout
                android:id="@+id/layoutCart"
                style="@style/image_45_50"
                android:layout_toStartOf="@+id/ivSearch">

                <ImageView
                    style="@style/wrap_wrap"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:padding="@dimen/margin_12"
                    android:src="@drawable/shopping_cart" />

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvCart"
                    style="@style/textview_description_small_wrap"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/black_cart_dot"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/ivSearch"
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:padding="@dimen/margin_12"
                android:src="@drawable/ic_search_white"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</layout>