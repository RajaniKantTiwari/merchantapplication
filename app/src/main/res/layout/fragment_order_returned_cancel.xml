<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/match_match"
        android:orientation="vertical"
        android:background="@color/white"
        android:clickable="true">

        <com.app.merchant.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100"
            android:background="@drawable/imge"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_21"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_header_large" />

        <LinearLayout style="@style/match_wrap">

            <LinearLayout style="@style/wrap_match"
                android:background="@color/date_bg_color"
                android:paddingStart="@dimen/margin_7"
                android:paddingEnd="@dimen/margin_7"
                >

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvHeading"
                    style="@style/textview_description_large_wrap"
                    android:layout_gravity="center"
                    android:text="@string/date"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="vertical"
                android:padding="@dimen/margin_2">

                <com.app.merchant.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/welcome"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_color" />

                <com.app.merchant.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Mr. John Doe"
                    android:textAllCaps="true" />

                <com.app.merchant.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/welcome"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/layoutLine"
            style="@style/view_layout_light_grey" />

        <RelativeLayout
            style="@style/layout_ver_match_1"
            android:padding="@dimen/margin_7">
            <com.app.merchant.widget.CustomTextView
                android:id="@+id/tvPerformance"
                style="@style/textview_description_wrap"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_5"
                android:textColor="@color/not_con_color"
                android:text="@string/performance_chart"/>
            <com.app.merchant.widget.CustomTextView
                style="@style/textview_description_smaller_wrap"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:drawablePadding="@dimen/margin_5"
                android:text="@string/order_canceled"
                android:drawableStart="@drawable/bg_circle_red_small"/>
            <ImageView
                android:id="@+id/layoutLi"
                style="@style/view_layout_light_grey"
                android:layout_below="@+id/tvPerformance"/>
            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/lineChart"
                style="@style/match_match"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_below="@+id/layoutLi"/>
        </RelativeLayout>

        <LinearLayout
            style="@style/layout_ver_match_1"
            android:orientation="vertical">
        <LinearLayout
            style="@style/match_wrap"
            android:layout_height="@dimen/margin_30"
            android:background="@drawable/order_bg">
            <com.app.merchant.widget.CustomTextView
                style="@style/order_text_view"
                android:text="@string/order_no"/>
            <ImageView
                style="@style/view_layout_vertical_light_grey"/>
            <com.app.merchant.widget.CustomTextView
                style="@style/order_text_view"
                android:text="@string/received_time"/>
            <ImageView
                style="@style/view_layout_vertical_light_grey"/>
            <com.app.merchant.widget.CustomTextView
                style="@style/order_text_view"
                android:text="@string/amount" />
            <ImageView
                style="@style/view_layout_vertical_light_grey" />
            <com.app.merchant.widget.CustomTextView
                style="@style/order_text_view_1_8"
                android:text="@string/reason"/>
        </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOrder"
                style="@style/match_match"/>
        </LinearLayout>

    </LinearLayout>
</layout>