<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/match_wrap"
        android:layout_height="@dimen/margin_40"
        android:background="@drawable/layer">
        <com.app.merchant.widget.CustomTextView
            android:id="@+id/tvNumberOfOrder"
            style="@style/order_text_view_large"
            android:maxLines="2"
            />
        <ImageView
            style="@style/view_layout_vertical_light_grey" />
        <com.app.merchant.widget.CustomTextView
            android:id="@+id/tvOrderStatus"
            style="@style/order_text_view_1_4"
            android:maxLines="2"/>
        <ImageView
            style="@style/view_layout_vertical_light_grey"/>
        <com.app.merchant.widget.CustomTextView
            android:id="@+id/tvPaymentStatus"
            style="@style/order_text_view_large"
            android:maxLines="2"
            />
        <ImageView
            style="@style/view_layout_vertical_light_grey"/>
        <com.app.merchant.widget.CustomTextView
            android:id="@+id/tvInvoiceNumber"
            style="@style/order_text_view_large"
            android:maxLines="2"
            />
        <ImageView
            style="@style/view_layout_vertical_light_grey"/>
        <com.app.merchant.widget.CustomTextView
            android:id="@+id/tvOrderDate"
            style="@style/order_text_view_large"
            />
    </LinearLayout>

</layout>