<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="payment"
            type="com.app.merchant.network.request.PaymentOption" />
    </data>

    <LinearLayout
        android:id="@+id/layoutNews"
        style="@style/match_wrap">

        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:layout_height="@dimen/margin_70"
            android:layout_marginEnd="@dimen/margin_7"
            android:layout_marginStart="@dimen/margin_7"
            android:layout_marginTop="@dimen/margin_8"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/margin_2">

            <LinearLayout
                style="@style/match_match"
                android:background="@drawable/stroke_dark_grey_bg">

                <LinearLayout
                    style="@style/layout_hori_match_3"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/image_30"
                        android:layout_margin="@dimen/margin_7"
                        android:background="@drawable/stroke_dark_grey_bg"
                        android:src="@drawable/icon_placeholder" />

                    <LinearLayout
                        style="@style/match_wrap"
                        android:orientation="vertical">

                        <com.app.merchant.widget.CustomTextView
                            android:id="@+id/tvProductQuantity"
                            style="@style/textview_description_wrap"
                            android:text="green caynine" />

                        <com.app.merchant.widget.CustomTextView
                            android:id="@+id/tvPrice"
                            style="@style/textview_description_smaller_wrap"
                            android:text="500 gm"
                            android:textColor="@color/color_dark_grey"/>

                        <com.app.merchant.widget.CustomTextView
                            android:id="@+id/tvProductName"
                            style="@style/textview_description_wrap"
                            android:drawablePadding="@dimen/margin_5"
                            android:drawableStart="@drawable/rupee_blue"
                            android:text="10.00"
                            android:textColor="@color/date_bg_color" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/layout_hori_match_1"
                    android:layout_height="@dimen/margin_50"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/view_layout_vertical_grey"
                        android:layout_marginBottom="@dimen/margin_7"
                        android:layout_marginTop="@dimen/margin_7" />

                    <LinearLayout
                        style="@style/match_match"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.app.merchant.widget.CustomTextView
                            style="@style/textview_description_smaller_match"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="@string/quantity"
                            android:textAllCaps="true" />

                        <com.app.merchant.widget.CustomTextView
                            android:id="@+id/tvQuantity"
                            style="@style/textview_description_wrap"
                            android:drawablePadding="@dimen/margin_5"
                            android:text="45678" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    style="@style/layout_hori_match_2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivSep"
                        style="@style/view_layout_vertical_grey"
                        android:layout_marginBottom="@dimen/margin_7"
                        android:layout_marginTop="@dimen/margin_7" />

                    <LinearLayout
                        style="@style/match_match"
                        android:layout_toEndOf="@+id/ivSep"
                        android:layout_toStartOf="@+id/ivAdd"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >

                        <com.app.merchant.widget.CustomTextView
                            android:id="@+id/tvAdd"
                            style="@style/textview_description_smaller_wrap"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/grey_round_ten"
                            android:paddingBottom="@dimen/margin_2"
                            android:paddingEnd="@dimen/margin_12"
                            android:paddingStart="@dimen/margin_12"
                            android:paddingTop="@dimen/margin_2"
                            android:text="@string/buy"
                            android:textAllCaps="true" />
                        <com.app.merchant.widget.CustomTextView
                            style="@style/textview_description_smaller_wrap"
                            android:textSize="@dimen/textsize_very_small"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_marginBottom="@dimen/margin_2"
                            android:text="@string/auto_request"
                            />
                        <android.support.v7.widget.SwitchCompat
                            style="@style/wrap_wrap"
                            android:background="@null"
                            android:button="@drawable/selector_check"
                            android:layout_gravity="center_horizontal"
                            android:thumb="@null"
                            app:track="@null"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivAdd"
                        style="@style/wrap_wrap"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/margin_7"
                        android:layout_marginTop="@dimen/margin_7"
                        android:padding="@dimen/margin_10"
                        android:src="@drawable/rupee_blue"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>