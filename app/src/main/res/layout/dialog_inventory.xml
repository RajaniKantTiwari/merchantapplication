<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:background="@drawable/dialog_bg"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/dialog_radius">

            <LinearLayout
                style="@style/match_wrap"
                android:background="@drawable/white_round_btnbg"
                android:orientation="vertical">

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvName"
                    style="@style/textview_header_small_match"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_4"
                    />
                <com.app.merchant.widget.CustomEditText
                    android:id="@+id/edNumberOfProduct"
                    style="@style/edit_text_style_larger"
                    android:layout_marginTop="@dimen/margin_15"
                    android:hint="@string/no_of_product"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:padding="@dimen/margin_5"/>

                <ImageView style="@style/view_layout" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginBottom="@dimen/margin_30">


                    <com.app.merchant.widget.CustomTextView
                        android:id="@+id/tvAddInventory"
                        style="@style/button_large_match"
                        android:gravity="center"
                        android:padding="@dimen/margin_6"
                        android:text="@string/add_inventory"
                        android:textAllCaps="true"
                        android:textColor="@color/color_green_cart"
                        app:customFont="@string/font_bold" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>