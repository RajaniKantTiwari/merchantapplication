<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:background="@drawable/dialog_bg"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/dialog_radius">

            <LinearLayout
                style="@style/match_wrap"
                android:background="@drawable/white_round_btnbg"
                android:orientation="vertical"
                android:padding="@dimen/margin_12">

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvOrderNumber"
                    style="@style/textview_description_wrap"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_4"
                    android:textAllCaps="true"
                    android:layout_marginBottom="@dimen/margin_15"/>
                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvCustomerName"
                    style="@style/textview_description_wrap"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvCustomerAddress"
                    style="@style/textview_description_wrap"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvNumberOfItem"
                    style="@style/textview_description_wrap"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvOrdervalue"
                    style="@style/textview_description_wrap"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/blue"/>



                <RelativeLayout
                    style="@style/match_wrap"
                    android:layout_margin="@dimen/margin_8"
                    android:background="@drawable/grey_corner_bg">

                    <Spinner
                        android:id="@+id/selectedSpiner"
                        style="@style/match_wrap"
                        android:dropDownWidth="@dimen/margin_230"
                        android:overlapAnchor="false" />
                </RelativeLayout>

                <com.app.merchant.widget.CustomTextView
                    android:id="@+id/tvNewDelivery"
                    style="@style/textview_description_match"
                    android:padding="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_10"
                    android:text="@string/assign_new_delivery_boy"
                    android:textAllCaps="true"
                    android:textColor="@color/view_color" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5">

                    <com.app.merchant.widget.CustomTextView
                        android:id="@+id/tvCancel"
                        style="@style/textview_window_btn"
                        android:layout_marginStart="@dimen/margin_10"
                        android:background="@drawable/not_confirm_bg"
                        android:text="@string/cancel_order"
                        android:textAllCaps="true"
                        android:textColor="@color/not_con_color" />

                    <com.app.merchant.widget.CustomTextView
                        android:id="@+id/tvOrderDetail"
                        style="@style/textview_window_btn"
                        android:layout_marginStart="@dimen/margin_10"
                        android:background="@drawable/confirm_bg"
                        android:text="@string/order_details"
                        android:textAllCaps="true"
                        android:textColor="@color/confirm_color" />

                    <com.app.merchant.widget.CustomTextView
                        android:id="@+id/tvConfirmOrder"
                        style="@style/textview_window_btn"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_marginStart="@dimen/margin_5"
                        android:background="@drawable/confirm_bg"
                        android:text="@string/confirm_order"
                        android:textAllCaps="true"
                        android:textColor="@color/confirm_color" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>